<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_900"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/ime_na_trenerot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trainer's Name"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/terminSaat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SessionTime"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/terminData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SessionDate"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/terminSaat"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/terminLokacija"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SessionLocation"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/pointsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points for this activity:"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/pointsView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/pointsTV"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/placesTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available places left:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/placesView"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="65dp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/placesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="65dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/reserve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserve"
        android:textColor="@color/purple_900"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ime_na_trenerot"
        android:layout_marginTop="120dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="149dp" />

</androidx.constraintlayout.widget.ConstraintLayout>