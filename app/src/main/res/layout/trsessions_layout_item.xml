<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/purple_900"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <TextView
        android:id="@+id/myName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Name"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="27dp" />

    <TextView
        android:id="@+id/terminTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SessionTime"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/terminDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SessionDate"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@id/terminTime"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteY="59dp" />

    <TextView
        android:id="@+id/terminLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SessionLocation"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="290dp"
        tools:layout_editor_absoluteY="63dp" />

    <TextView
        android:id="@+id/pointsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Points for this activity:"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/pointsShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        app:layout_constraintStart_toEndOf="@+id/pointsTextView"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="71dp"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/placesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available places left:"
        android:textColor="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/placesShow"
        android:layout_marginRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="65dp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="109dp" />

    <TextView
        android:id="@+id/placesShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="x"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="65dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/cancelSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel Session"
        android:textColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="149dp" />

    <Button
        android:id="@+id/confirmSession"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Session"
        android:textColor="@color/dark_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myName"
        android:layout_marginTop="120dp"
        android:layout_marginRight="20dp"
        tools:layout_editor_absoluteX="222dp"
        tools:layout_editor_absoluteY="147dp" />

</androidx.constraintlayout.widget.ConstraintLayout>